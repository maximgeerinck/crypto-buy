<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tracker.Views.AccountRegisterPage">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Email" FontSize="Medium" />
            <Entry Text="{Binding AccountRegister.Email}" FontSize="Small" />
            <Label Text="Password" FontSize="Medium" />
            <Entry Text="{Binding AccountRegister.Password}" FontSize="Small" Margin="0" IsPassword="True" />
            <Button Text="Register" Clicked="Register_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>